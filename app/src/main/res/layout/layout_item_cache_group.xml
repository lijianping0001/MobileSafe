<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_item_cache_group"
        android:layout_margin="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_array"/>

    <TextView
        android:id="@+id/tv_item_cache_group_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="应用缓存"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/iv_item_cache_group"
        android:layout_centerVertical="true"/>

    <CheckBox
        android:id="@+id/cb_item_cache_group_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_item_cache_group_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="20.9MB"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/cb_item_cache_group_check"/>

</RelativeLayout>
