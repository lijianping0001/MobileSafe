<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jianping.lee.mobilesafe.activity.CleanCacheActivity">

    <include layout="@layout/layout_toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_clean_cache_main"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/myGreen"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tv_clean_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:text="240.5"/>

            <TextView
                android:id="@+id/tv_clean_cache_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_clean_cache_size"
                android:layout_alignBottom="@id/tv_clean_cache_size"
                android:text="MB"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_clean_cache_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_clean_cache_size"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="查看详情"
                android:drawableRight="@drawable/icon_nav_right"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="2">

            <Button
                android:id="@+id/btn_clean_cache"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/round_button_white"
                android:text="一键清理"/>

        </LinearLayout>


    </LinearLayout>




</LinearLayout>
