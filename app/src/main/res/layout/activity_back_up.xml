<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jianping.lee.mobilesafe.activity.BackUpActivity">

    <include layout="@layout/layout_toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/myGreen">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/image_user"/>

        <TextView
            android:id="@+id/tv_back_up_name"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="点击登录"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/rb_back_up_upload"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:drawableTop="@drawable/icon_upload"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:button="@null"
            android:gravity="center"
            android:text="备份"/>

        <RadioButton
            android:id="@+id/rb_back_up_download"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="50dp"
            android:drawableTop="@drawable/icon_download"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:gravity="center"
            android:text="恢复"/>

    </RelativeLayout>

</LinearLayout>
