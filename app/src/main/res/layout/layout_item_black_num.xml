<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <TextView
       android:id="@+id/tv_item_black_num_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="20dp"
       android:textSize="16sp"
       android:textColor="@color/myLightBlue"
       android:text="中国移动"/>

    <TextView
        android:id="@+id/tv_item_black_num_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_black_num_name"
        android:layout_alignLeft="@id/tv_item_black_num_name"
        android:layout_marginBottom="10dp"
        android:text="10086"/>

    <ImageView
        android:id="@+id/iv_item_black_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_delete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/tv_item_black_num_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_item_black_num"
        android:layout_marginRight="10dp"
        android:textColor="@color/myRed"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:text="电话拦截"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_item_black_num_phone"
        android:background="@color/grey"/>

</RelativeLayout>
