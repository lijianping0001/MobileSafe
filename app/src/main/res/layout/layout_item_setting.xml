<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/list_item_selecter"
    android:id="@+id/rl_item_app_setting">

    <ImageView
        android:id="@+id/iv_item_app_setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:padding="8dp"
        android:src="@drawable/default_image"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/tv_item_app_setting"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_app_setting"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:text="微信"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_item_app_setting_array"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_array_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"/>

    <Switch
        android:id="@+id/sw_item_app_setting_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

</RelativeLayout>
